{
    "comments": {
        "lineComment": "//",
        "blockComment": [ "/*", "*/" ]
    },
    "colorizedBracketPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        {
            "open": "{",
            "close": "}"
        },
        {
            "open": "[",
            "close": "]"
        },
        {
            "open": "(",
            "close": ")"
        },
        {
            "open": "'",
            "close": "'",
            "notIn": [
                "string",
                "comment"
            ]
        },
        {
            "open": "\"",
            "close": "\"",
            "notIn": [
                "string"
            ]
        },
        {
            "open": "/**",
            "close": " */",
            "notIn": [
                "string"
            ]
        }
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "wordPattern": "\\b[a-zA-Z_][a-zA-Z_0-9]*\\b",
    "indentationRules": {
        "increaseIndentPattern": "^.*\\{[^}\\\"']*$",
        "decreaseIndentPattern": "^(.*\\*/)?\\s*\\}[;\\s]*$",
        "unIndentedLinePattern": "^[\\s;]*(//).*$"
    },
    "autoCloseBefore": ";:.,=}])> \n\t",
    "folding": {"markers": {
        "start": "^.*{",
        "end": "^.*}"
    }},
    "TODO": "add onEnterRules later, once if/else/for/while statements without braces are supported"
}